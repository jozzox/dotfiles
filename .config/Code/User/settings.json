{
  "workbench.colorTheme": "Tokyo Night",
  "workbench.editor.enablePreview": false,
  "workbench.iconTheme": "catppuccin-perfect-mocha",
  "workbench.startupEditor": "none",
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.indent": 16,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  "workbench.statusBar.visible": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.centeredLayoutAutoResize": false,
  "window.customTitleBarVisibility": "auto",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 1.5,
  "update.showReleaseNotes": false,
  "zenMode.hideLineNumbers": false,
  "editor.fontFamily": "'Cascadia Mono NF', 'JetBrains Mono Nerd Font', 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.lineHeight": 1.5,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.cursorWidth": 5,
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.scrollBeyondLastLine": false,
  "editor.fontWeight": "700",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.minimap.enabled": false,
  "editor.formatOnPaste": true,
  "editor.suggestSelection": "first",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.showIcons": true,
  "editor.stickyScroll.enabled": false,
  "editor.tabCompletion": "on",
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": true,
  "editor.lightbulb.enabled": "onCode",
  "editor.showFoldingControls": "never",
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.decorations.badges": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.defaultLanguage": "plaintext",
  "zenMode.fullScreen": false,
  "zenMode.hideActivityBar": true,
  "zenMode.hideStatusBar": false,
  "zenMode.centerLayout": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "html": true,
    "css": true,
    "scss": true,
    "javascript": true,
    "javascriptreact": true,
    "typescript": true,
    "typescriptreact": true,
    "python": true,
    "json": true,
    "jsonc": true,
    "yaml": true
  },
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.localeOverride": "de",
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.advanced": {
    "length": 500,
    "temperature": 0.1,
    "top_p": 1,
    "inlineSuggestCount": 3,
    "listCount": 10
  },
  "python.terminal.activateEnvironment": true,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.fontFamily": "'Cascadia Mono NF', 'JetBrains Mono Nerd Font', 'Courier New', monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "files.associations": {
    "*.css": "scss"
  },
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "prettier.singleQuote": false,
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,
  "prettier.semi": true,
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[html]": {
    "editor.suggest.insertMode": "replace",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.css-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.inlayHints.callArgumentNames": "all",
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.diagnosticSeverityOverrides": {
    "reportArgumentType": "information",
    "reportOptionalSubscript": "information",
    "reportImplicitStringConcatenation": "warning",
    "reportOperatorIssue": "warning",
    "reportUnboundVariable": "error",
    "reportMissingImports": "none",
    "reportMissingTypeStubs": "none",
    "reportImportCycles": "none",
    "reportUnusedImport": "none",
    "reportUnusedClass": "none",
    "reportUnusedFunction": "none",
    "reportUnusedVariable": "none"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "javascript.preferences.quoteStyle": "double",
  "javascript.preferences.useAliasesForRenames": false,
  "typescript.preferences.quoteStyle": "double",
  "typescript.preferences.useAliasesForRenames": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "redhat.telemetry.enabled": false,
  "editor.linkedEditing": true,
  "telemetry.telemetryLevel": "off",
  "gitlens.telemetry.enabled": false,
  "vim.easymotion": true,
  "vim.smartRelativeLine": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [{ "before": ["j", "j"], "after": ["<Esc>"] }],
  "vim.normalModeKeyBindingsNonRecursive": [
    // NAVIGATION
    // switch b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },
    // splits
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },
    // panes
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    // NICE TO HAVE
    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "q"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] },
    { "before": ["[", "d"], "commands": ["editor.action.marker.prev"] },
    { "before": ["]", "d"], "commands": ["editor.action.marker.next"] },
    {
      "before": ["leader", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    { "before": ["leader", "p"], "commands": ["editor.action.formatDocument"] },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    }
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    // toggle comment selection
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
  ],
  "window.menuBarVisibility": "toggle",
  "yaml.schemas": {
    "/home/tux/.vscode/extensions/continue.continue-1.0.10-linux-x64/config-yaml-schema.json": [
      ".continue/**/*.yaml"
    ]
  },
  "chat.editing.confirmEditRequestRemoval": false,
  "chat.mcp.serverSampling": {
    "Global in Code: github": {
      "allowedModels": ["github.copilot-chat/gpt-4.1"]
    }
  },
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1"
}
